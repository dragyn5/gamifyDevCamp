<% if flash[:alert] %>
  <%= js add_gritter(flash[:alert], title: "ACHIEVEMENT", sticky: false, time: 2000, image: :progress) %>
<% elsif flash[:error] %>
  <%= js add_gritter(flash[:error], title: "ACHIEVEMENT",sticky: false, time: 2000, image: :progress) %>
<% else %>
  <%= js add_gritter(flash[:notice], title: "ACHIEVEMENT", sticky: false, time: 2000, image: :progress) %>
<% end %>
