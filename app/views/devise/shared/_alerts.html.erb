<% if flash[:alert] %>
  <%= js add_gritter(flash[:alert], title: "Vitality Alert", sticky: false, time: 2000, image: :warning) %>
<% elsif flash[:error] %>
  <%= js add_gritter(flash[:error], title: "Vitality Error", sticky: false, time: 2000, image: :error) %>
<% else %>
<%= js add_gritter(flash[:notice], title: "Vitality Notification", sticky: false, time: 2000, image: :success) %>
<% end %>
